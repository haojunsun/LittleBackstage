@using System.Data
@using LittleBackstage.Core.Models
@model System.Data.DataTable
@{
    ViewBag.Title = "条目列表-条目管理-资源管理";
    var categoryFields = (List<CategoryField>)ViewBag.tableTitle;
    var list = categoryFields.Where(x => x.IsShow == 1).OrderByDescending(x => x.Sort).ToList();
    var categoryId = ViewBag.categoryId;
    string idName = ViewBag.idName;
}
@section styles_theme_level{
    <link href="~/Assets/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
}
<div class="wrapper wrapper-content animated fadeInRight" style="width: 100%; height: 100%">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>资源管理 <small>条目管理-条目列表</small></h5>
                    <div class="ibox-tools">
                        <a href="javascript:void(0);" class=" btn btn-primary btn-xs" onclick="addEntry();">创建条目</a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewBag.CategorySelect, "--请选择条目分类--", new
                                 {
                                     onchange = "getCategory(this);",
                                     tabindex = "1",
                                     @class = "form-control m-b",
                                     @id = "category"
                                 })
                        </div>
                        <div class="col-sm-3">
                            @*<div class="input-group">
                                    <input type="text" placeholder="请输入关键词" class="input-sm form-control"> <span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary"> 搜索</button>
                                    </span>
                                </div>*@
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @foreach (var title in list)
                                {
                                    <th>@title.FieldName</th>
                                }
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                var id = dr[ViewBag.idName + "_Id"];
                                <tr class="gradeX">
                                    @foreach (var title in list)
                                    {
                                        if (title.IdEntity == "InputManager")
                                        {
                                            <td>@Html.Action("GetName", "EntryTable", new { id = dr[title.IdEntity] })</td>
                                        }
                                        else
                                        {
                                            <td>@dr[title.IdEntity]</td>
                                        }
                                    }
                                    <td><a href="@Url.Action("EditEntry", "EntryTable", new { id, categoryId })">编辑</a> | <a href="@Url.Action("DelEntry", "EntryTable", new { id, categoryId })" onclick="return confirm('确认删除')">删除</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- 全局js -->
    <script src="~/Assets/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="~/Assets/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    @*<script src="~/Assets/js/content.js?v=1.0.0"></script>*@
    <script>
        $(document)
            .ready(function () {
                $('.dataTables-example')
                    .dataTable({
                        "lengthChange": false, //是否允许用户改变表格每页显示的记录数
                        "ordering": false, //是否允许DataTables排序
                        "pageLength": 10 //改变初始的页面长度(每页显示的记录数)
                    });
            });

        function getCategory(id) {
            var category = $("#category").val();
            //alert(proid);
            if (category == '') {
                //console.log("无值");
            } else {
                window.location.href = '@Url.Action("index", "EntryTable")' +'?id=' + category;
            }
            //console.log(category);
        }

        function addEntry() {
            var category = $("#category").val();
            if (category == '') {
                //console.log("无值");
            } else {
                window.location.href ='@Url.Action("AddEntryTable", "EntryTable")' +'?categoryId=' + category;
            }
        }
    </script>
}
<!-- Page-Level Scripts -->