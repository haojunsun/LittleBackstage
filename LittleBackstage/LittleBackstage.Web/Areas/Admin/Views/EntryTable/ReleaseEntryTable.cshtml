@using System.Data
@using LittleBackstage.Core.Models
@model System.Data.DataTable

@{
    ViewBag.Title = "条目发布-条目管理-资源管理";
    var categoryFields = (List<CategoryField>)ViewBag.tableTitle;
    var list = categoryFields.Where(x => x.IsShow == 1).OrderByDescending(x => x.Sort).ToList();
    var categoryId = ViewBag.categoryId;
    string idName = ViewBag.idName;
}
@section styles_theme_level{
    <link href="~/Assets/css/plugins/dataTables/dataTables.bootstrap.css" rel="stylesheet">
}
<div class="wrapper wrapper-content animated fadeInRight" style="width: 100%; height: 100%">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>资源管理 <small>条目管理-条目发布</small></h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-2">
                            @Html.DropDownList("category", (IEnumerable<SelectListItem>)ViewBag.CategorySelect, "--请选择条目分类--", new
                                 {
                                     onchange = "searchExamine();",
                                     tabindex = "1",
                                     @class = "form-control m-b",
                                     @id = "category"
                                 })
                        </div>
                        <div class="col-sm-2">
                            <div class="input-group">
                                <select class="form-control" id="examineState" onchange="searchExamine();">
                                    <option value="-2">请选择</option>
                                    <option value="-2">所有状态</option>
                                    <option value="0">待发布</option>
                                    <option value="1">发布</option>
                                    <option value="-1">取消发布</option>
                                </select>
                                @*<span class="input-group-btn">
                                        <button type="button" class="btn btn-sm btn-primary" onclick="searchExamine();">搜索</button>
                                    </span>*@
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                @foreach (var title in list)
                                {
                                    <th>@title.FieldName</th>
                                }
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                var id = dr[ViewBag.idName + "_Id"];
                                <tr class="gradeX">
                                    @foreach (var title in list)
                                    {
                                        if (title.IdEntity == "InputManager")
                                        {
                                            <td>@Html.Action("GetName", "EntryTable", new { id = dr[title.IdEntity] })</td>
                                        }
                                        else if (title.IdEntity == "IsExamine")
                                        {

                                            <td> <span class="label label-success">通过</span></td>
                                        }
                                        else if (title.IdEntity == "IsRelease")
                                        {
                                            if (dr[title.IdEntity].ToString() == "0")
                                            {
                                                <td> <span class="label label-default">待发布</span></td>
                                            }
                                            else if (dr[title.IdEntity].ToString() == "1")
                                            {
                                                <td> <span class="label label-success">成功发布</span></td>
                                            }
                                            else if (dr[title.IdEntity].ToString() == "-1")
                                            {
                                                <td> <span class="label label-warning">取消发布</span></td>
                                            }
                                        }
                                        else
                                        {
                                            <td>@dr[title.IdEntity]</td>
                                        }
                                    }
                                    <td><a href="@Url.Action("ReleaseEntry", "EntryTable", new { id, categoryId })">设置发布状态</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <!-- 全局js -->
    <script src="~/Assets/js/plugins/jeditable/jquery.jeditable.js"></script>
    <!-- Data Tables -->
    <script src="~/Assets/js/plugins/dataTables/jquery.dataTables.js"></script>
    <script src="~/Assets/js/plugins/dataTables/dataTables.bootstrap.js"></script>
    <!-- 自定义js -->
    @*<script src="~/Assets/js/content.js?v=1.0.0"></script>*@
    <script>
        $(document)
            .ready(function () {
                $('.dataTables-example')
                    .dataTable({
                        "lengthChange": false, //是否允许用户改变表格每页显示的记录数
                        "ordering": false, //是否允许DataTables排序
                        "pageLength": 10 //改变初始的页面长度(每页显示的记录数)
                    });
            });

        function searchExamine() {
